{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "outDir": "../dist-electron",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "../src/*"
            ]
        },
        "skipLibCheck": true
    },
    "include": [
        "."
    ]
}